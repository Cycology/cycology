#include <unistd.h>
#include <fcntl.h>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <sys/statvfs.h>

/*
 * Tests xmp_read
 */

int main(int argc, char *argv[])
{
  if (argc != 2) {
    perror("INVALID ARGS");
    return 0;
  }

  char* name;
  name = "../mntdir/test123";
  int fd = open(name, O_CREAT | O_RDWR, S_IRWXU);
  if (fd == -1) {
    perror("ERROR IN CREATING FILE");
    return 0;
  }

  int numPages = atoi(argv[1]);
  int readSize = 1024 * numPages;
  int buf[(1024 / sizeof(int)) * numPages + 1];
  int bytesRead = 0;
  int curOffset = 0;
  for (int i = 0; i < numPages; i++) {
    bytesRead += read(fd, buf+bytesRead, 1024);

    // Skip every other page 
    curOffset += (1024 * 2);
    lseek(fd, curOffset, SEEK_SET);
  }


  printf("BYTES READ = %d\n", bytesRead);
  printf("\n%s\n", buf);
  close( fd );
  
  return 0;
}
